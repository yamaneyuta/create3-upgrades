  "bugs": {
    "url": "https://github.com/yamaneyuta-examples/deploy-create3-contract/issues"
  },
  "homepage": "https://github.com/yamaneyuta-examples/deploy-create3-contract#readme",
  "peerDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.0.5",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "hardhat": "^2.22.3",
    "solady": "^0.0.192"
  }
