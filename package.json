{
  "name": "@yamaneyuta/deploy-create3-contract",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/src/index.js",
  "exports":{
    ".": {
      "require": "./dist/src/index.js",
      "import": "./dist/src/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "./dist/src/**/*",
    "./contracts/**/*.sol",
    "!**/mocks/**"
  ],
  "scripts": {
    "build": "npm run build:sol && npm run build:js",
    "build:js": "tsc -p tsconfig.build.json",
    "build:sol": "hardhat compile",
    "clean": "npm run clean:js && npm run clean:sol",
    "clean:js": "rm -rf dist",
    "clean:sol": "hardhat clean",
    "coverage": "hardhat coverage",
    "lint": "hardhat check",
    "test": "hardhat test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yamaneyuta-examples/deploy-create3-contract.git"
  },
  "keywords": [
    "solidity",
    "create3"
  ],
  "author": "",
